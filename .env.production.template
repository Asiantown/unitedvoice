# United Voice Agent - Production Environment Template
# Copy this file to .env and fill in your actual values

# ================================
# CORE API KEYS (REQUIRED)
# ================================
GROQ_API_KEY=your_groq_api_key_here
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here
SERPAPI_API_KEY=your_serpapi_api_key_here

# ================================
# FLIGHT API CONFIGURATION
# ================================
FLIGHT_API_USE_REAL=true
FLIGHT_API_FALLBACK_TO_MOCK=true

# ================================
# WEBSOCKET CONFIGURATION
# ================================
ENVIRONMENT=production
WEBSOCKET_HOST=0.0.0.0
WEBSOCKET_PORT=8000
WEBSOCKET_PATH=/socket.io/

# ================================
# CORS CONFIGURATION
# ================================
# Comma-separated list of allowed origins
CORS_ORIGINS=https://your-frontend-domain.vercel.app,https://your-custom-domain.com

# ================================
# SSL/WSS CONFIGURATION
# ================================
SSL_ENABLED=false
# Only needed if using custom SSL certificates (most cloud platforms handle this automatically)
SSL_CERT_PATH=/path/to/cert.pem
SSL_KEY_PATH=/path/to/key.pem

# ================================
# SERVER CONFIGURATION
# ================================
MAX_CONNECTIONS=1000
PING_TIMEOUT=60
PING_INTERVAL=25
LOG_LEVEL=INFO
LOG_FORMAT=json
DEBUG=false

# ================================
# PLATFORM-SPECIFIC VARIABLES
# ================================
# These are automatically set by cloud platforms, uncomment if needed

# Heroku
# PORT=$PORT

# Railway
# RAILWAY_STATIC_URL=$RAILWAY_STATIC_URL

# Render
# RENDER=true

# ================================
# OPTIONAL: MONITORING & ANALYTICS
# ================================
# SENTRY_DSN=your_sentry_dsn_here
# MIXPANEL_TOKEN=your_mixpanel_token_here
# NEW_RELIC_LICENSE_KEY=your_newrelic_key_here