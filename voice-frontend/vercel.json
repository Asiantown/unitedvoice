{
  "version": 2,
  "name": "voice-frontend",
  "functions": {
    "src/app/**/*.{js,ts,jsx,tsx}": {
      "maxDuration": 30,
      "memory": 512
    },
    "src/app/voice-premium/page.tsx": {
      "maxDuration": 60,
      "memory": 1024
    }
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        },
        {
          "key": "Permissions-Policy",
          "value": "camera=(), microphone=(self), geolocation=(), interest-cohort=()"
        }
      ]
    },
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, POST, PUT, DELETE, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Content-Type, Authorization, X-Requested-With"
        },
        {
          "key": "Access-Control-Max-Age",
          "value": "86400"
        }
      ]
    },
    {
      "source": "/(.*\\.(js|css|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot))",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ],
  "redirects": [
    {
      "source": "/",
      "destination": "/voice",
      "permanent": false
    }
  ],
  "env": {
    "NEXT_PUBLIC_WS_URL": "@next_public_ws_url",
    "NEXT_PUBLIC_API_BASE_URL": "@next_public_api_base_url",
    "NEXT_PUBLIC_ENVIRONMENT": "@next_public_environment",
    "NEXT_PUBLIC_ENABLE_ANALYTICS": "@next_public_enable_analytics",
    "NEXT_PUBLIC_ENABLE_DEBUG": "@next_public_enable_debug",
    "NEXT_PUBLIC_ENABLE_ADVANCED_FEATURES": "@next_public_enable_advanced_features",
    "NEXT_PUBLIC_ENABLE_VOICE_VISUALIZATION": "@next_public_enable_voice_visualization",
    "NEXT_PUBLIC_ENABLE_CONVERSATION_HISTORY": "@next_public_enable_conversation_history",
    "NEXT_PUBLIC_ENABLE_SETTINGS": "@next_public_enable_settings",
    "NEXT_PUBLIC_ENABLE_PREMIUM_FEATURES": "@next_public_enable_premium_features",
    "NEXT_PUBLIC_AUDIO_QUALITY": "@next_public_audio_quality",
    "NEXT_PUBLIC_MAX_RECONNECT_ATTEMPTS": "@next_public_max_reconnect_attempts",
    "NEXT_PUBLIC_RECONNECT_DELAY": "@next_public_reconnect_delay"
  },
  "regions": ["iad1", "sfo1"],
  "github": {
    "silent": true
  }
}